<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@android:color/transparent" />
            <corners android:radius="2dp" />
            <solid android:color="@color/purple_base" />
        </shape>
    </item>

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/purple_base" />
            <corners android:radius="2dp" />
            <solid android:color="@color/white" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#dcdcdc" />
            <corners android:radius="2dp" />
            <solid android:color="@color/white" />
        </shape>
    </item>
</selector>