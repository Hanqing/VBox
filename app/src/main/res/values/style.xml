<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--Toolbar颜色 也是多任务切换的标题颜色-->
        <item name="colorPrimary">@color/purple_base</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/purple_base_dark</item>
        <!--下划线 提示等一些组件的 着色-->
        <item name="colorAccent">@color/purple_base_dark</item>

        <!--android底色-->
        <!--<item name="android:windowBackground">@color/window_background</item>-->

        <!--ActionMode出现时 覆盖ActionBar-->
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">

    </style>

    <!--<style name="Animation" parent="@android:style/Animation">-->
    <!--&lt;!&ndash;窗体进入动画&ndash;&gt;-->
    <!--<item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>-->
    <!--&lt;!&ndash;窗体退出动画&ndash;&gt;-->
    <!--<item name="android:windowExitAnimation">@android:anim/slide_in_left</item>-->
    <!--</style>-->

    <!--侧滑透明-->
    <style name="TranslucentTheme" parent="AppTheme">
        <!--theme透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--背景透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--状态栏透明 DrawerLayout-->
    <style name="TranslucentStatusTheme" parent="AppTheme">
        <!--状态栏透明-->
        <!--<item name="android:windowTranslucentStatus">true</item>-->
    </style>

    <style name="progressBarColor">
        <item name="colorAccent">@color/pink_base</item>
    </style>

    <style name="loadingProgressbar">
        <item name="android:indeterminateDrawable">@drawable/loading_progressbar</item>
    </style>

    <style name="episode_btn_style">
        <item name="android:background">@drawable/episode_item_bg</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>