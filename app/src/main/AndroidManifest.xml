<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.smart.vbox">

    <!-- network access -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- gsm网络信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- wifi网路信息  -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <!-- write sdcard -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!--获取设备信息-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_vbox"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.activity.MainActivity"
            android:theme="@style/TranslucentStatusTheme">
        </activity>

        <activity
            android:name=".ui.activity.SearchActivity">
        </activity>
        <activity
            android:name=".ui.activity.init.WifiInitActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

    </application>

</manifest>
